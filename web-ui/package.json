{
  "name": "rtp2httpd-status-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:status && npm run build:player && npm run embed",
    "build:status": "VITE_PAGE=status vite build",
    "build:player": "VITE_PAGE=player vite build",
    "embed": "node ../scripts/embed-page.js status dist-status/status.html ../src/status_page.h && node ../scripts/embed-page.js player dist-player/player.html ../src/player_page.h",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "mpegts.js": "^1.8.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "eslint": "^9.38.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
